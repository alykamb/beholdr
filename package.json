{
    "name": "beholdr",
    "version": "0.0.1",
    "description": "Javascript proxy server for localhost development",
    "author": "Alykam Burdzaki (alykam@gmail.com)",
    "private": false,
    "license": "MIT",
    "bin": {
        "beholdr": "./dist/main.js"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "run": "ts-node src/main.ts",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^8.0.0",
        "@nestjs/core": "^8.0.0",
        "@nestjs/platform-express": "^8.0.0",
        "chalk": "^4.1.2",
        "fastify": "^3.24.0",
        "http-proxy": "^1.18.1",
        "lodash": "^4.17.21",
        "nest-commander": "^2.3.4",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/express": "^4.17.13",
        "@types/http-proxy": "^1.17.7",
        "@types/jest": "^27.0.2",
        "@types/lodash": "^4.14.177",
        "@types/node": "^16.11.4",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^8.3.1",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "eslint-plugin-sort-class-members": "^1.12.0",
        "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
        "jest": "^27.3.1",
        "nest-commander-testing": "^2.0.1",
        "prettier": "^2.4.1",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.6",
        "ts-jest": "^27.0.7",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
